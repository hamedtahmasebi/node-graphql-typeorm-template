{
    "compilerOptions": {
        "target": "ESNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "lib": ["es2018", "esnext.asynciterable"],
        "outDir": "./build",
        "rootDir": "./src",
        "strict": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@database/*": ["src/database/*"],
            "@core/*": ["src/core/*"],
            "@app/*": ["src/app/*"]
        }
    }
}
